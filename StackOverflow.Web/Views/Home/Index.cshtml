@model HomeViewModel
@using StackOverflow.Data


<div class="row">
    <div class="col-md-8 offset-md-2">
        @foreach (Question question in Model.Questions)
        {
            <div class="card card-body bg-light">
                <h4>
                    <a href="/questions/viewquestion?id=@question.Id">
                        @question.Title
                    </a>
                </h4>
                <div>
                    <span>Tags:</span>
                    @foreach (QuestionsTags questionTag in question.QuestionsTags)
                    {
                        <span class="badge badge-primary">@questionTag.Tag.Name</span>
                    }
                </div>
                <div style="margin-top: 10px;">
                    @question.Text
                </div>
                <span>Likes: @question.Likes.Count</span>
                <br />
                <span>@question.Answers.Count answer(s)</span>
            </div>
        }
    </div>
</div>